{
    "name": "amc_process",
    "description": "Preprocessing of AMC data",

    "absolute_path": "/scratch-shared/sbenson/FeatherFormat/",
    "preprocessing": "/scratch-shared/sbenson/preprocessing_v3",

    "Datatools4heart_Patient.feather": ["pseudo_id", "Geboortejaar", 
    "Geboortemaand", "Geslacht", "Overlijdensdatum"],
    "Datatools4heart_Opnametraject.feather": ["pseudo_id", "OpnameDatum"],
    "Datatools4heart_Tabakgebruik.feather": ["pseudo_id", "IsHuidigeRoker", "IsVoormaligRoker"],
    "Datatools4heart_MetingBMI.feather": ["pseudo_id", "Patientcontactid", "BMI"],
    "Datatools4heart_MetingBloeddruk.feather": ["pseudo_id", "PatientContactId", "SystolischeBloeddrukWaarde", "DiastolischeBloeddrukWaarde"],
    "Datatools4heart_VoorgeschiedenisMedisch.feather": ["pseudo_id", "diagnosecode_classified", {"diagnosecode": {"t2dm": "t2dm", "af": "af", "chronic_ischemic_hd": "chronic_ischemic_hd", "acute_mi": "acute_mi"}}, ["IndicatieDatumVaststelling"]],
    "Datatools4heart_MedicatieToediening.feather": ["pseudo_id", "ATCKlasseCode_classified", {"ATCKlasseCode": {"ace": "ace", "beta": "beta"}}, ["ToedieningsDatum"]],
    "Datatools4heart_Labuitslag.feather": ["pseudo_id", "BepalingCode", {"UitslagNumeriek": {"RKRE;BL": "creatinine", "RHDL;BL": "hdl_cholesterol", "RCHO;BL": "total_cholesterol"}}, ["MateriaalAfnameDatum"]],

    "categories": {"gender": ["M", "F"]},
    "scaler": "scaler_amc.h5",
    "imputer": "imputer_amc.h5",
    "final_cols": ["Geslacht", "AgeAtOpname", "IsHuidigeRoker", "hdl_cholesterol", "total_cholesterol", "OpnameDatum",
    "BMI", "SystolischeBloeddrukWaarde", "DiastolischeBloeddrukWaarde", "ace", "time", "beta", "creatinine", "t2dm", "chronic_ischemic_hd", "acute_mi", "af"],
    "comment_gencols": ["age_###", "bmi_###", "sbp_###", "dbp_###", "hdl_cholesterol_###", "total_cholesterol_###", "rf_smoking_###",
    "sex_###", "hypertension_threshold_###", "t2dm_threshold_###", "diabetes_threshold_###", "ht_medication_###", 
    "hf_threshold_***", "arthritis_threshold_***", "fam_history_***", 
    "rf_ethnicity_***", "townsend_deprivation_index_***"],

    "InitTransforms": {
        "ATCKlasseCode_classified": {
            "func": "classify",
            "kwargs": {
                "classification_map": ["ace", "beta"],
                "input_col": "ATCKlasseCode",
                "out_col": "ATCKlasseCode_classified",
                "id_col": "pseudo_id"
            }
        },
        "diagnosecode_classified": {
            "func": "classify",
            "kwargs": {
                "classification_map": ["t2dm", "af", "chronic_ischemic_hd", "acute_mi"],
                "input_col": "diagnosecode",
                "out_col": "diagnosecode_classified",
                "id_col": "pseudo_id"
            }
        }
    },
    "PreTransforms": {
        "OpnameDatum": {
            "func": "datetime_keepfirst",
            "kwargs": {
                "col_to_date": "OpnameDatum",
                "sort_col": "OpnameDatum",
                "drop_col": "pseudo_id"
            }
        },
        "Overlijdensdatum": {
            "func": "datetime",
            "kwargs": {
                "col_to_date": "Overlijdensdatum"
            }
        },
        "IsHuidigeRoker": {
            "func": "smokerprocess",
            "kwargs": {
                "smoking": "IsHuidigeRoker",
                "id_col": "pseudo_id"
            }
        },
        "DiagnoseOmschrijving": {
            "func": "diagnoseprocess_simple",
            "kwargs": {
                "disease": "diabetes",
                "search_col": "DiagnoseOmschrijving",
                "id_col": "pseudo_id"
            }
        },
        "SystolischeBloeddrukWaarde": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "PatientContactId",
                "drop_col": "pseudo_id"
            }
        },
        "DiastolischeBloeddrukWaarde": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "PatientContactId",
                "drop_col": "pseudo_id"
            }
        },
        "BMI": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "Patientcontactid",
                "drop_col": "pseudo_id"
            }
        }
    },

    "MergedTransforms": {
        "time": {
            "func": "diff",
            "kwargs": {
                "end": "Overlijdensdatum",
                "start": "OpnameDatum"
            }
        },
        "AgeAtOpname": {
            "func": "diff",
            "kwargs": {
                "end": "OpnameDatum",
                "start": "Geboortejaar",
                "level": "year"
            }
        },
        "Geslacht": {
            "func": "map",
            "kwargs": {
                "map": {"Man": 0, "Vrouw": 1}
            }
        },
        "FillNaN": {
            "func": "fillna",
            "kwargs": {
                "values": {"IsHuidigeRoker": 0, "diabetes": 0}
            }
        },
        "DropNaN": {
            "func": "dropna",
            "kwargs": {
                "subset": ["BMI", "SystolischeBloeddrukWaarde"]
            }
        }
    }
}
