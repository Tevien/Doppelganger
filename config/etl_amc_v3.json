{
    "name": "amc_process",
    "description": "Preprocessing of AMC data",

    "absolute_path": "/scratch-shared/sbenson/FeatherFormat/",
    "preprocessing": "/scratch-shared/sbenson/preprocessing_test",

    "Datatools4heart_Patient.feather": ["pseudo_id", "Geboortejaar", 
    "Geboortemaand", "Geslacht", "Overlijdensdatum"],
    "Datatools4heart_Opnametraject.feather": ["pseudo_id", "OpnameDatum"],
    "Datatools4heart_Tabakgebruik.feather": ["pseudo_id", "IsHuidigeRoker", "IsVoormaligRoker", "Patientcontactid"],
    "Datatools4heart_MetingBMI.feather": ["pseudo_id", "Patientcontactid", "BMI"],
    "Datatools4heart_MetingBloeddruk.feather": ["pseudo_id", "PatientContactId", "SystolischeBloeddrukWaarde", "DiastolischeBloeddrukWaarde"],
    "Datatools4heart_VoorgeschiedenisMedisch.feather": ["pseudo_id", "diagnosecode_classified", {"diagnosecode": {"t2dm": "t2dm", "af": "af", "acute_mi": "acute_mi"}}, ["IndicatieDatumVaststelling"]],
    "Datatools4heart_VoorgeschiedenisFamilie.feather": ["pseudo_id", "FamilieVoorgeschiedenis", "hf_fam"],
    "Datatools4heart_MedicatieToediening.feather": ["pseudo_id", "ATCKlasseCode_classified", {"ATCKlasseCode": {"ace": "ace", "beta": "beta"}}, ["ToedieningsDatum"]],
    "Datatools4heart_Labuitslag.feather": ["pseudo_id", "BepalingCode", {"UitslagNumeriek": {"RKRE;BL": "creatinine", "RHDL;BL": "hdl_cholesterol", "RCHO;BL": "total_cholesterol"}}, ["MateriaalAfnameDatum"]],
    "merged_nyha_lvef_DT.feather": ["pseudo_id", "Measurement Type", {"Value": {"NYHAClass": "nyha", "LVEFValue": "lvef"}}, ["RecordDate"]],

    "final_cols": ["Geslacht", "AgeAtOpname", "IsHuidigeRoker", "hdl_cholesterol", "total_cholesterol", "OpnameDatum",
    "BMI", "SystolischeBloeddrukWaarde", "DiastolischeBloeddrukWaarde", "ace", "time", "beta", "creatinine", "t2dm", "acute_mi", "af", "nyha", "lvef", "hf_fam"],

    "tuple_vals_after": ["hdl_cholesterol", "total_cholesterol", "creatinine", "nyha", "lvef", 
    "SystolischeBloeddrukWaarde", "DiastolischeBloeddrukWaarde"],
    "tuple_vals_anybefore": ["ace", "beta", "t2dm", "acute_mi", "af"],
    "ref_date": "OpnameDatum",

    "InitTransforms": {
        "ATCKlasseCode_classified": {
            "func": "classify",
            "kwargs": {
                "classification_map": ["ace", "beta"],
                "input_col": "ATCKlasseCode",
                "out_col": "ATCKlasseCode_classified",
                "id_col": "pseudo_id"
            }
        },
        "diagnosecode_classified": {
            "func": "classify",
            "kwargs": {
                "classification_map": ["t2dm", "af", "acute_mi"],
                "input_col": "diagnosecode",
                "out_col": "diagnosecode_classified",
                "id_col": "pseudo_id"
            }
        },
        "FamilieVoorgeschiedenis": {
            "func": "pattern_match",
            "kwargs": {
                "id_col": "pseudo_id",
                "search_col": "FamilieVoorgeschiedenis",
                "pattern_dict": {
                    "hf_fam": "hart|plots"
                },
                "case_sensitive": false,
                "group_by_id": true
            }
        }
    },
    "PreTransforms": {
        "OpnameDatum": {
            "func": "datetime_keepfirst",
            "kwargs": {
                "col_to_date": "OpnameDatum",
                "sort_col": "OpnameDatum",
                "drop_col": "pseudo_id"
            }
        },
        "Overlijdensdatum": {
            "func": "datetime",
            "kwargs": {
                "col_to_date": "Overlijdensdatum"
            }
        },
        "IsHuidigeRoker": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "Patientcontactid",
                "drop_col": "pseudo_id"
            }
        },
        "SystolischeBloeddrukWaarde": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "PatientContactId",
                "drop_col": "pseudo_id"
            }
        },
        "BMI": {
            "func": "keepfirst",
            "kwargs": {
                "sort_col": "Patientcontactid",
                "drop_col": "pseudo_id"
            }
        }
    },

    "MergedTransforms": {
        "time": {
            "func": "diff",
            "kwargs": {
                "end": "Overlijdensdatum",
                "start": "OpnameDatum"
            }
        },
        "AgeAtOpname": {
            "func": "diff",
            "kwargs": {
                "end": "OpnameDatum",
                "start": "Geboortejaar",
                "level": "year"
            }
        },
        "Geslacht": {
            "func": "map",
            "kwargs": {
                "map": {"Man": 0, "Vrouw": 1}
            }
        },
        "IsHuidigeRoker": {
            "func": "map",
            "kwargs": {
                "map": {"Nee": 0, "Ja": 1}
            }
        },
        "FillNaN": {
            "func": "fillna",
            "kwargs": {
                "values": {"IsHuidigeRoker": 0}
            }
        },
        "DropNaN": {
            "func": "dropna",
            "kwargs": {
                "subset": ["BMI", "SystolischeBloeddrukWaarde"]
            }
        }
    }
}
